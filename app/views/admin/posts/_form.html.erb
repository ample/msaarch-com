<% unless f.object.new_record? %>

	<fieldset>
		<legend>Post Properties</legend>

		<p><%= f.check_box(:active) %><%= f.label :active %></p>

		<p><%= f.label :permalink %><br />
		<%= f.text_field(:permalink, :class => 'text') %></p>

		<p><%= f.label :created_at %><br /><%= f.datetime_select(:created_at, :prompt => true) %></p>

		<p><%= f.label :active_at %><br /><%= f.datetime_select(:active_at, :prompt => true) %></p>

		<p><%= f.label :inactive_at %><br /><%= f.datetime_select(:inactive_at, :prompt => true) %></p>

	</fieldset>


	<fieldset>
		<legend>Post Content</legend>

		<p><%= f.label :title %><br />
		<%= f.text_field(:title, :class => 'text') %></p>

		<p><%= f.label :teaser %><br />
		<%= f.text_area(:teaser, :class => 'textile') %></p>
		
		<p><%= f.label :body %><br />
		<%= f.text_area(:body, :class => 'textile') %></p>
		
		<%= f.hidden_field(:asset_id, :value => current_post.asset_id, :class => next_asset_drop_class) %>
		<p><%= f.label :asset_id, 'Post Photo' %></p>
		<%= asset_drop(current_post, :asset) %>

	</fieldset>

<% else %>

	<fieldset>
		<p><%= f.label :title %><br />
		<%= f.text_field(:title, :class => 'text') %></p>

		<p><%= f.label :active_at %><br /><%= f.datetime_select(:active_at, :prompt => true) %></p>

	</fieldset>

<% end %>