<fieldset>
	<legend>Update Properties</legend>

	<p><%= f.check_box(:active) %><%= f.label :active %></p>

	<p><%= f.label :active_at %><br /><%= f.datetime_select(:active_at, :prompt => true) %></p>

	<p><%= f.label :inactive_at %><br /><%= f.datetime_select(:inactive_at, :prompt => true) %></p>

</fieldset>


<fieldset>
	<legend>Update Content</legend>

	<p><%= f.label :body %><br />
	<%= f.text_area(:body) %></p>
	
	<p><%= f.label :link %><br />
	<%= f.text_field(:link, :class => 'text') %></p>

</fieldset>
