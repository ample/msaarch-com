<%= form_for(current_segment, :html => { :multipart => true }) do |f| %>

<fieldset>
<% unless f.object.new_record? %>
	<p><%= f.label :permalink %><br />
		<%= f.text_field(:permalink, :class => 'text') %></p>

	<p><%= f.check_box(:active) %><%= f.label :active %></p>
<% end %>

	<p><%= f.label :nav_name %><br />
	<%= f.text_field(:nav_name, :class => 'text') %></p>

	<p><%= f.label :title %><br />
	<%= f.text_field(:title, :class => 'text') %></p>


<% unless f.object.new_record? %>
	<p><%= f.label :body %><br />
	<%= f.text_area(:body, :class => 'textile') %></p>

	<%= f.hidden_field(:asset_id, :value => current_segment.asset_id, :class => next_asset_drop_class) %>
	<p><%= f.label :asset_id, 'Segment Logo' %></p>
	<%= asset_drop(current_segment, :asset) %>

	<p><%= f.label :color %><br />
	<%= f.text_field :color, :value => (current_segment.color.blank? ? '#000000' : current_segment.color), :class => 'text' %></p>
	<div id="colorpicker"></div>

<% end %>

</fieldset>

<button type="submit" name="continue" class="positive"><%= f.object.new_record? ? 'Create' : 'Update' %> Segment</button>
<%= link_to 'Cancel', segments_path, :class => 'button' %>

<% end %>
