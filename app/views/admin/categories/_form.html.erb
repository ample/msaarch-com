<%= form_for(current_category, :html => { :multipart => true }) do |f| %>

<fieldset>
<% unless f.object.new_record? %>
	<p><%= f.check_box(:active) %><%= f.label :active %></p>
<% end %>

	<p><%= f.label :title %><br />
	<%= f.text_field(:title, :class => 'text') %></p>


<% unless f.object.new_record? %>
	<p><%= f.label :body %><br />
	<%= f.text_area(:body, :class => 'textile') %></p>
<% end %>

</fieldset>

<button type="submit" name="continue" class="positive"><%= f.object.new_record? ? 'Create' : 'Update' %> Category</button>
<%= link_to 'Cancel', categories_path, :class => 'button' %>

<% end %>
