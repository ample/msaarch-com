<%= form_for(current_project, :html => { :multipart => true }) do |f| %>

<fieldset>
<% unless f.object.new_record? %>
	<p><%= f.label :permalink %><br />
		<%= f.text_field(:permalink, :class => 'text') %></p>

	<p><%= f.check_box(:active) %><%= f.label :active %></p>

<% end %>

	<p><%= f.label :nav_name %><br />
	<%= f.text_field(:nav_name, :class => 'text') %></p>

	<p><%= f.label :title %><br />
	<%= f.text_field(:title, :class => 'text') %></p>

	<p><%= f.label :markets %><br />
	<%= f.collection_select :market_ids, Market.all, :id, :title, {}, :multiple => true %></p>

<% unless f.object.new_record? %>
	
  <div class="clearfix">
	<p><%= f.label :categories %><br />
  <% Category.root_level.each do |category| %>
  <div class="opts">
    <%= label_tag category.title %>
    <% category.children.each do |subcategory| %>
      <label><%= check_box_tag "project[category_ids][]", subcategory.id, current_project.categories.include?(subcategory) %> <%= subcategory.title %></label>
    <% end %>
  </div>
  <% end %>
  </p></div>
	
	<p><%= f.label :teaser %><br />
	<%= f.text_area(:teaser, :class => 'textile') %></p>
	
	<p><%= f.label :body %><br />
	<%= f.text_area(:body, :class => 'textile') %></p>
	
	<%= f.hidden_field(:thumbnail_id, :value => current_project.thumbnail_id, :class => next_asset_drop_class) %>
	<p><%= f.label :thumbnail_id, 'Project Thumbnail' %></p>
	<%= asset_drop(current_project, :thumbnail) %>

<% end %>

</fieldset>

<button type="submit" name="continue" class="positive"><%= f.object.new_record? ? 'Create' : 'Update' %> Project</button>
<%= link_to 'Cancel', projects_path, :class => 'button' %>

<% end %>
