<div id="left" class="column span-16 append-1">
	<%= content_tag :h2, title("Editing Market: #{current_market.title}"), :class => 'object_title' %>
	<%= render 'form' %>
</div>
<div id="right" class="column span-7 last">
	<%= render 'admin/error_messages', :object => current_market %>
	<hr />
	<h4>Associated Projects</h4>
	<ul>
	<% current_market.projects.each do |p| %>
		<%= content_tag :li, link_to(p.title, edit_project_path(p)) %>
	<% end %>
	</ul>
</div>

<script>
AA['assets']=true;
$(document).ready(function() {
	$('#colorpicker').farbtastic('#market_color');
});
</script>
