<%= form_for(current_market, :html => { :multipart => true }) do |f| %>

<fieldset>
<% unless f.object.new_record? %>
	<p><%= f.label :permalink %><br />
		<%= f.text_field(:permalink, :class => 'text') %></p>

	<p><%= f.check_box(:active) %><%= f.label :active %></p>

	<p><%= f.check_box(:visible) %><%= f.label :visible, 'Display in top nav?' %></p>

<% end %>

	<p><%= f.label :nav_name %><br />
	<%= f.text_field(:nav_name, :class => 'text') %></p>

	<p><%= f.label :title %><br />
	<%= f.text_field(:title, :class => 'text') %></p>

<% unless f.object.new_record? %>
	<p><%= f.label :body %><br />
	<%= f.text_area(:body, :class => 'textile') %></p>

	<%= f.hidden_field(:logo_id, :value => current_market.logo_id, :class => next_asset_drop_class) %>
	<p><%= f.label :logo_id, 'Market Logo' %></p>
	<%= asset_drop(current_market, :logo) %>

	<%= f.hidden_field(:banner_id, :value => current_market.banner_id, :class => next_asset_drop_class) %>
	<p><%= f.label :banner_id, 'Market Banner' %></p>
	<%= asset_drop(current_market, :banner) %>

	<p><%= f.label :color, 'Background Color' %><br />
	<%= f.text_field :color, :value => (current_market.color.blank? ? '#000000' : current_market.color), :class => 'text' %></p>
	<div id="colorpicker"></div>

	<p><%= f.label :text_color %><br />
	<%= f.text_field :text_color, :value => (current_market.text_color.blank? ? '#000000' : current_market.text_color), :class => 'text' %></p>
	<div id="text_colorpicker"></div>

<% end %>

</fieldset>

<button type="submit" name="continue" class="positive"><%= f.object.new_record? ? 'Create' : 'Update' %> Market</button>
<%= link_to 'Cancel', markets_path, :class => 'button' %>

<% end %>
