<% image_url = asset.is_image? ? asset.attachment.thumb('50x50#').encode(:jpg).url : '/assets/admin/icons/icon_pdf.gif' %>
<% image_url = asset.is_swf? ? '/assets/admin/icons/icon_swf.gif' : image_url %>
<%= link_to image_tag( image_url, :id => "asset_#{asset.id}", :title => asset.attachment_name, :size => '50x50', :class => 'asset_thumb', :style => "border-color: #{asset.color.blank? ? '#CCC' : asset.color}" ), asset.attachment.url, :target => '_blank' %>