<% unless current_market.featured_projects.empty? %>
<h2>Case Studies</h2>
<div id="case-studies-controls"></div>
<div id="case-studies" class="span-15 last">
	<div id="case-study-slides" class="panels">
	<% current_market.featured_projects.each do |project| %>
		<div class="case-study span-5">
			<%= image_asset project, :object => project.thumbnail, :dimensions => '284x179', :class => 'frame', :style => "border-color: #{project.thumbnail.color}", :link => '#' unless project.thumbnail.nil? %>
			<%= content_tag :p, project.categories.collect(&:title).join(','), :class => "#{current_market.permalink} categories" %>
			<%= content_tag :h3, link_to(project.title, '#') %>
			<%= project.teaser.to_html.html_safe %>
		</div>
	<% end %>
	</div>
	<hr />
</div>
<% end %>

<%= render 'projects' unless current_market.projects.empty? %>