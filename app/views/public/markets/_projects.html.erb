<div id="projects">
  <div class="span-3">
    <%= content_tag :h4, current_market.title, :class => current_market.permalink %>
    <%= content_tag :h3, 'Projects' %>
    
    <% prev_parent = nil %>
    <% current_market.project_categories.each do |category| %>
      <%= content_tag :hr if prev_parent != category.parent %>
      <% prev_parent = category.parent %>
      <ul>
        <%= content_tag :li, "#{category.title} (#{category.projects.size})" %>
      </ul>
    <% end %>
    <%= content_tag :hr %>

  </div>
  <div class="span-12 last">
    <% current_market.projects.each_with_index do |project, idx| %>
      <div class="span-3<%= ' last' if idx % 4 == 3 %>">
        <%= image_asset project, :object => project.thumbnail, :dimensions => '154x96', :class => 'frame', :style => "border-color: #{project.thumbnail.hex};" unless project.thumbnail.nil? %>
      </div>
    <% end %>
  </div>
</div>