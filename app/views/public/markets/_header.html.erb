<section id="alpha"<%= current_market.background %> class="clearfix <%= current_market.permalink %>">
	<div class="container">
		<div class="span-9 append-1 intro">
      <%= image_asset current_market, :object => current_market.logo, :dimensions => '324x>', :class => 'market-logo', :encode => :png unless current_market.logo.blank? %>
			<%= current_market.body.to_html.html_safe %>
		</div>
		<div class="span-5 last">
		<% unless current_market.videos.empty? %>
			<%= content_tag :h3, 'Video', :class => "#{current_market.permalink} span-3" %>
			<div id="videos-controls" class="span-2 last <%= current_market.permalink %>"></div>  
			<div id="videos">
				<%= render :partial => 'public/markets/video', :collection => current_market.videos %>
			</div>
		<% end %>
		</div>
	</div>
</section>
