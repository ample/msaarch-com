<%= content_tag :h2, 'Careers', :class => 'section-title' %>
<div class="career span-9<%= ' with-subtitle' if current_career.location.present? %>">
  
  <%= content_tag :h1, current_career.title, :class => 'page-title' %>
  <%= content_tag :h2, current_career.location, :class => 'page-subtitle' if current_career.location.present? %>

  <%= current_career.body.to_html.html_safe %>
  
  <div class="contact-us">
    <hr />
    <%= link_to "Contact #{current_career.user.full_name} about this position", contact_form_path(current_career.user) %>
    <hr />
  </div>
  
</div>
<%= render 'public/careers/sidebar' %>
