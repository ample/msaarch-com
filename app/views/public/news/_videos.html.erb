<div class="block videos">
  <%= content_tag :h2, 'Videos' %>
  <% current_post.videos.each do |video| %>
  <div class="video">
    <%= link_to image_asset(video, :dimensions => '245x>', :class => [:frame, :video], :style => "border-color: #{video.asset.color}"), video.link, 'data-video-id' => video.video_id unless video.asset.nil? %>
    <%= video.body.to_html.html_safe unless video.body.blank? %>
  </div>
  <% end %>
</div>