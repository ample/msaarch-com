<section id="alpha">
  <div class="container">
    <div class="span-6 append-4">
      <%= content_tag :h1, current_page.random_headline.html_safe, :class => :dark, :style => 'display: none;' %>
    </div>

    <div class="span-5 last">
      <div class="dark">
        <%= current_page.body.to_html.html_safe %>
      </div>
      <div class="dark updates">
        <%= render :partial => 'public/updates/update', :collection => current_updates %>
      </div>
    </div>

  </div>
</section>

<div class="caption dark">
  <div class="container">
    <%= current_page.background_caption %>
  </div>
</div>

<section id="beta">
<% unless current_features.empty? %>
  <div id="features" class="container">
    <h2>Featured</h2>
    <%= render 'public/features' %>
  </div>
<% end %>
</section>

