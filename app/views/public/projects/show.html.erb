<div class="span-8">
	
	<%= content_tag :h3, current_project.subtitle, :class => current_market.permalink %>
	<%= content_tag :h1, current_project.title %>
	<%= content_tag :h3, current_project.location %>
	<%= content_tag :div, current_project.body.to_html.html_safe, :class => 'body' %>
	
</div>
<div id="sidebar" class="prepend-2 span-5 last">
	
	<div class="categories block">
		<%= content_tag :h2, 'Categories' %>
		<%= current_project.categories.collect(&:title).flatten.join(', ') %>
	</div>
	<div class="team block">
		<%= content_tag :h2, 'Team' %>
		<% current_project.users.each do |user| %>
			<%= image_asset user, :dimensions => '59x36#', :class => 'frame', :link => team_path(user) %>
		<% end %>
	</div>
	<div class="awards block">
		<%= content_tag :h2, 'Awards' %>
	</div>
	<div class="links block">
		<%= content_tag :h2, 'Links' %>
	</div>

</div>