<section id="alpha" class="clearfix <%= current_market.permalink %>"></section>
<% if current_project.images.size > 1 %>
<section id="controls">
  <%= link_to '<span class="wrap"><span class="bg"></span></span>'.html_safe, '#', :id => 'project-imagery-previous', :class => 'previous' %>
  <%= link_to '<span class="wrap"><span class="bg"></span></span>'.html_safe, '#', :id => 'project-imagery-next', :class => 'next' %>
</section>
<section id="tango">
	<ul id="project-imagery">
	<% current_project.images.each do |image| %>
		<%= content_tag :li do %>
		  <%= content_tag :div, nil, :class => :bg, :style => "background-image: url('#{image.asset.attachment.thumb('600x449#').url}'); " %>
    <% end %>
	<% end %>
	</ul>
</section>
<% end %>