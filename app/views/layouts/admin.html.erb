<!doctype html> 
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]-->
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title><%= yield :title %></title>
	<meta name="author" content="Ample, http://helloample.com" />

	<%= stylesheet_link_tag "admin/blueprint/screen", :media => "screen, projection" %>
	<%= stylesheet_link_tag "admin/blueprint/print", :media => "print" %>
	<!--[if lt IE 8]><%= stylesheet_link_tag "admin/blueprint/ie", :media => "screen, projection" %><![endif]-->
	<%= stylesheet_link_tag    "ample_admin", "admin/admin" %>
	<%= javascript_include_tag "ample_admin", "admin/admin" %>
	<%= yield(:head) %>
	<%= csrf_meta_tags %>
	
	<script type="text/javascript">
		<% session_key = Rails.application.config.session_options[:key] %>
		var AA = {}; AA.mount_at = '<%= AmpleAdmin::Engine.config.mount_at %>'; 
		var csrf_token = $('meta[name=csrf-token]').attr('content');
		var csrf_param = $('meta[name=csrf-param]').attr('content');
		var uploadify_script_data = {};
				uploadify_script_data[csrf_param] = encodeURIComponent(encodeURIComponent(csrf_token)); 
				uploadify_script_data['<%= session_key %>'] = '<%= cookies[session_key] %>';
	</script>	

</head>
<body class="ample-admin">

	<header class="clearfix">
		<%= render 'admin/nav' %>
	</header>
	<div id="container">
		<div id="main" class="container">
			<%= show_flashes %>
			<%= yield %>
		</div>
		<footer class="container">&nbsp;</footer>
	</div>


</body>
</html>
