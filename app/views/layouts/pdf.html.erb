<!doctype html> 
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie ie6 lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 7 ]>		 <html lang="en" class="no-js ie ie7 lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8 ]>		 <html lang="en" class="no-js ie ie8 lt-ie9"> <![endif]-->
<!--[if IE 9 ]>		 <html lang="en" class="no-js ie ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en" class="no-js"> <!--<![endif]-->
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<%= content_tag :title, page_title %>
	<meta name="keywords" content="<%= @meta_keywords || META[:keywords] %>" />
	<meta name="description" content="<%= @meta_description || META[:description] %>" />
	<meta name="author" content="Ample, http://helloample.com" />
	<%= stylesheet_link_tag "public/blueprint/screen", :media => "screen, projection" %>
	<%= stylesheet_link_tag "public/blueprint/print", :media => "print" %>
	<!--[if lt IE 8]><%= stylesheet_link_tag "public/blueprint/ie", :media => "screen, projection" %><![endif]-->
	<%= stylesheet_link_tag "public/pdf", "public/video-overlays" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body<%= body_classes %>>

<%= content_tag :section, :class => :container do %>
  <%= content_tag :header, image_tag('elements/msa-architects-pdf.gif', :id => 'logo', :size => '300x45') %>
  <%= content_tag :section, yield, :class => :clearfix %>
  <%= content_tag :footer do %>
    <%= content_tag :p do %>
      &copy; 2011 MSA Architects. All rights reserved.<br />
      <%= link_to request.url, request.url %>
    <% end %>
  <% end %>
<% end %>

<script type="text/javascript" src="http://fast.fonts.com/jsapi/94abe249-b3a4-4d0b-9e43-7d288b4a3853.js"></script>

</body>
</html>
