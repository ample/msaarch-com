<% Market.live.each do |market| %>
.<%= market.permalink %>, 
.<%= market.permalink %> a {
	color: <%= market.color %>; 
	border-color: <%= market.color %>; 
	border-style: solid;
}
section.<%= market.permalink %> {
	background-color: <%= market.color %>; 
}
<% end %>

body {
	color: #a1a1a1; 
	background: #171717;
}

hr {
	background: #343434; 
	border: none; 
	border-top: 1px solid #0A0A0A; 
}

ul, ol {
	margin: 0; 
	padding: 0; 
}

a, a:hover {
	color: #FFF;
	text-decoration: none;
}

h1, h2, h3, h4 {
	color: #707070;
	margin: 0;
	padding: 0;
}

h2 {
	font-size: 32px;
	line-height: 36px;
	margin-bottom: 20px;
}

h3 {
	font-size: 24px;
	line-height: 32px;
	margin-bottom: 20px;
}

.frame {
	border: 3px solid #FFF;
	margin: 0 10px 0 0;
}

.left {
	float: left; 
}

.right {
	float: right; 
}

section#header {
	background: #0a0a0a url(/assets/elements/nav-bgx.png) repeat-x bottom left;
	ul {
		margin: 0; 
		padding: 0; 
	}
	li {
		float: right; 
		list-style-type: none;
	}
	li a {
		font-size: 13px;
		display: block; 
		padding: 30px 15px 10px;
		border-left: 1px solid #222121;
		border-right: 1px solid #000;
		color: #7D7D7D;
	}
	li a:hover {
		color: #FFF;
	}
	li.on a {
		color: #FFF; 
		background: #090909;
	}
	li.on li a {
		background: transparent;
	}
	li.drop div.subnav {
		position: absolute;
		display: none;
		background: #1B1B1B;
		width: 100px;
		padding: 10px 15px; 
		li {
			float: none;
			text-align: left;
		}
		a {
			border: none;
			padding: 0;
		}
	}
	img#logo {
		float: left;
		margin: 20px 15px 0;
	}
	nav {
		float: right; 
		width: 750px; 
	}
}

section#footer {
	font-size: 11px; 
	padding: 20px 0 40px;
	a {
		color: #a1a1a1;
	}
	div#markets {
		a {
			font-weight: bold;
			border-bottom-width: 2px;
		}
		li {
			margin-right: 20px;
			list-style-type: none;
			float: left; 
			strong {
				font-size: 14px;
				color: #FFF;
			}
		}
		p {
			margin-top: 15px;
			clear: left; 
		}
	}
	div#social {
		text-align: right;
		a {
			padding-right: 24px;
			margin-bottom: 2px;
			background: url(/assets/elements/social-icons.gif) no-repeat top right;
			display: block; 
			height: 18px;
		}
		a.linkedin {
			background-position: 100% -20px;
		}
		a.sharethis {
			background-position: 100% -40px;
		}
	}
}

body {
	section#alpha {
		color: #FFF; 
		min-width: 950px; 
		background-size: 100%;
		background-origin: padding-box;
		h3 {
			font-size: 20px; 
			line-height: 30px; 
			margin: 0; 
		}
		h4 {
			font-size: 14px; 
			line-height: 20px;
		}
		h3, #videos, #videos-controls {
			text-shadow: -1px -1px 1px rgba(0,0,0,0.8);
			filter: dropshadow(color=rgba(0,0,0,0.8), offx=-1, offy=-1);
		}
		#videos {
			margin-top: 10px; 
			h4 {
				margin: 10px 0 4px; 
			}
			p {
				font-size: 12px;
			}
		}
		#videos-controls {
			float: right; 
			ul {
				position: relative; 
				top: 10px;
				left: 25px;
				list-style-type: none; 
			}
			li {
				display: block;
				float: left; 
				a {
					display: block; 
					width: 14px; 
					height: 12px;
					margin-top: 2px;
				}
			}
			.previous a {
				background: url(/assets/elements/panels-pager.gif) no-repeat center left; 
				margin-right: 5px;
			}
			.next a {
				background: url(/assets/elements/panels-pager.gif) no-repeat center right; 
				margin-left: 4px;
			}
		}
	}
}

