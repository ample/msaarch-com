	background: #1f1f1f url(/assets/elements/bgxy.png) repeat top left; 
	border: 1px solid #373737;	
	border-width: 1px 0; 
	padding: 40px 0;
	#projects {
		.project {
			width: 184px; 
			height: 125px;
		}
		ul {
			list-style-type: none;
		}
		li {
			line-height: 24px; 
		}
		hr {
