body.market {
	section#alpha {
		img.market-logo {
			margin-bottom: 20px;
		}
		.container {
			padding: 40px 0;
		}
		.intro {
			font-size: 16px;
			text-shadow: -1px -1px 1px #5b3d00;
			filter: dropshadow(color=#5b3d00, offx=-1, offy=-1);
		}
		.feature {
			width: 290px;
		}
	}
