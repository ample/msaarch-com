<%# debug params %>

<% unless f.object.new_record? %>

	<fieldset>
		<legend>Properties</legend>
	
		<p><%= f.check_box(:active) %><%= f.label :active %></p>

		<p><%= f.label :permalink %><br />
		<%= f.text_field(:permalink, :class => 'text') %></p>
	
		<p><%= f.label :nav_name %><br />
		<%= f.text_field(:nav_name, :class => 'text') %></p>
	
		<%= render :partial => 'admin/meta_fields', :locals => { :f => f } %>
	
		<p><%= f.label :nav_position %><br />
		<%= f.select(:nav_position, Page.nav_positions_for_select) %></p>
	
		<p><%= f.label :parent %><br />
		<%= f.select(:parent_id, Page.parent_select.reject { |p| p[1] == f.object.id }, :include_blank => 'None') %></p>

		<p><%= f.label :active_at %><br /><%= f.datetime_select(:active_at, :prompt => true) %></p>

		<p><%= f.label :inactive_at %><br /><%= f.datetime_select(:inactive_at, :prompt => true) %></p>
	
		<%= f.hidden_field :template_filename, 'data-role' => 'template-filename' %>

	</fieldset>

	<fieldset>
		<legend>Content</legend>
	
		<p><%= f.label :title %><br />
		<%= f.text_field(:title, :class => 'text') %></p>

		<p><%= f.label :subtitle %><br />
		<%= f.text_field(:subtitle, :class => 'text') %></p>

		<p><%= f.label :body %><br />
		<%= f.text_area(:body, :class => 'textile') %>

	</fieldset>

<% else %>

	<fieldset>
		<p><%= f.label :nav_name %><br />
		<%= f.text_field(:nav_name, :class => 'text') %></p>
	
		<p><%= f.label :title %><br />
		<%= f.text_field(:title, :class => 'text') %></p>

		<%= f.hidden_field :template_filename %>

	</fieldset>

<% end %>
